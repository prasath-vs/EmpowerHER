<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PeriodMainActivity"
    android:layout_marginTop="70dp">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/roboto_bold"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="Welcome to Period Tracker"
        android:textAlignment="center"
        android:textColor="#FF3030"
        android:textSize="28sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPeriodCalendar"
        android:layout_below="@id/welcomeText"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="#FA7171"
        android:background="@drawable/custom_button3"
        android:layout_marginTop="40dp"
        android:text="Period Calendar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSymptoms"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="#FA7171"
        android:background="@drawable/custom_button3"
        android:layout_below="@id/btnPeriodCalendar"
        android:layout_marginTop="30dp"
        android:text="Symptoms" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnInsights"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="#FA7171"
        android:background="@drawable/custom_button3"
        android:layout_below="@id/btnSymptoms"
        android:layout_marginTop="30dp"
        android:text="Health Insights" />

