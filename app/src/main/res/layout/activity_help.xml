<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpActivity">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/how_to_use_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Use the App"
                android:layout_marginTop="20dp"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginBottom="30dp"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4"/>

            <!-- Features Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Features:"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#ffffff"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• SOS Button: Press the SOS button in case of an emergency to send your location and trigger an alarm."
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#F0F9FF"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• AI Chatbot: Use the chatbot for AI-based responses and to get quick tips or help."
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#F0F9FF"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Period Tracker: Track your menstrual cycle and receive health tips."
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#F0F9FF"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Inbuilt Store: Browse and purchase products directly from the app."
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#F0F9FF"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Feedback System: Share your feedback and rate the app. Your input helps us improve!"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#F0F9FF"
                android:layout_marginBottom="20dp"/>

            <!-- How to Use Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to use the app:"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Navigate through the app using the navigation drawer."
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#F0F9FF"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Use the SOS feature in case of emergencies."
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#F0F9FF"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Explore other features from the menu, such as the AI chatbot, Period Tracker, and Store."
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#F0F9FF"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Submit your feedback from the feedback section and rate the app."
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#F0F9FF"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>