<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JavaBiometric" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.JavaBiometric" parent="Base.Theme.JavaBiometric">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="tab_layout">
        <item name="android:textColor">#575757</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.JavaBiometric.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JavaBiometric.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JavaBiometric.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Navigation" parent="Base.Theme.JavaBiometric">
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>
</resources>